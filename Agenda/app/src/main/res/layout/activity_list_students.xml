<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ListView
    android:id="@+id/activity_list_students_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  </ListView>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/activity_list_students_fab_new"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    android:src="@drawable/ic_action_add_student"
    android:contentDescription="@string/activity_list_students_fab_description" />

</RelativeLayout>